@model IEnumerable<Vidisc2.Models.Player>

@{
    ViewBag.Title = "Players";
}

<h2>Players</h2>

<p>
    <a asp-controller="Players" asp-action="Create">Create New</a>
</p>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Created at</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                <a asp-area="" asp-controller="Players" asp-action="Delete" asp-route-id="@item.PlayerId">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
                
            </td>
            
        </tr>
    }
</table>